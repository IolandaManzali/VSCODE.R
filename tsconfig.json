{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "outDir": "dist",
        "lib": [
            "ES2021"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "html",
        "node_modules",
        ".vscode-test",
        ".github"
    ]
}
